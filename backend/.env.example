# Environment Configuration Template
# Copy to .env and fill in your values

# Application
APP_ENV=development
APP_NAME=MAS-VGFR
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mas_vgfr
POSTGRES_USER=mas_vgfr_user
POSTGRES_PASSWORD=mas_vgfr_password
DATABASE_URL=postgresql+asyncpg://mas_vgfr_user:mas_vgfr_password@localhost:5432/mas_vgfr

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=mas_vgfr_docs
MONGO_USER=mas_vgfr_user
MONGO_PASSWORD=mas_vgfr_password
MONGO_URL=mongodb://mas_vgfr_user:mas_vgfr_password@localhost:27017/mas_vgfr_docs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=mas_vgfr_docs

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=mistral:7b-instruct
OLLAMA_EXTRACTION_MODEL=mistral:7b-instruct
OLLAMA_DRAFTING_MODEL=mistral:7b-instruct

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Langfuse (LLMOps Observability)
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=http://localhost:3001
LANGFUSE_ENABLED=true

# Document Processing
MAX_UPLOAD_SIZE_MB=50
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,docx
TEMP_UPLOAD_DIR=/tmp/mas_vgfr_uploads

# SAMR (Shadow Agent Memory Reconciliation)
SAMR_ENABLED=true
SAMR_DIVERGENCE_THRESHOLD=0.85
SAMR_PERTURBATION_STRENGTH=0.1

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# JWT Auth
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Prometheus
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
